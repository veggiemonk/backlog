{
  "mcp": {
    "allowed": [
      "gopls"
    ]
  },
  "general": {
    "checkpointing": {
      "enabled": true
    }
  },
  "context": {
    "fileName": [
      "AGENTS.md",
      "CONTRIBUTING.md"
    ]
  },
  "ui": {
    "showMemoryUsage": true,
    "showLineNumbers": true
  },
  "mcpServers": {
    "gopls": {
      "command": "gopls",
      "args": [
        "mcp"
      ],
      "timeout": 30000,
      "trust": true
    }
  },
  "tools": {
    "useRipgrep": true
  }
}
